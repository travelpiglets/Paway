<nav class="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">
            <svg class="icon icon--md rotate270"><use xlink:href="#icon-arrow"></use></svg>
            {{t "Newer Posts"}}
        </a>
    {{/if}}
    <span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">
            {{t "Older Posts"}}
            <svg class="icon icon--md rotate90"><use xlink:href="#icon-arrow"></use></svg>
        </a>
    {{/if}}
</nav>
