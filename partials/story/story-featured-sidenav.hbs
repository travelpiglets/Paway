<div class="sfp-item u-flexCenter u-marginBottom30">
    {{!-- Featured Image --}}
    {{#if feature_image}}
    <div class="sfp-left u-flex0 u-relative">
        <a class="sfp-image" href="{{url}}">
            <img class="u-image u-absolute0 u-round lazyload"
                src="{{img_url feature_image size="xss"}}"
                srcset="{{img_url feature_image size="s"}}"
                data-srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w"
                data-src="{{img_url feature_image size="m"}}"
                alt="{{title}}"
            />
        </a>
    </div>
    {{/if}}
    {{!-- date and title --}}
    <div class="sfp-right u-flex1">
        <time class="datetime" datetime="{{date format=" YYYY-MM-DD "}}">{{date published_at format="MMMM DD, YYYY"}}</time>
        <h2 class="sfp-title"><a href="{{url}}">{{title}}</a></h2>
    </div>
</div>